        #numbers{
            width: 100%;
            height: 100%;
            overflow-y: scroll;
            background-color: rgba(229, 233, 236, 0.795);

        }
        #navigator{
            margin-bottom: 5px;
            display: flex;
            justify-content: space-evenly;
            height: 40%;
            width: 100%;
            background-color: rgb(27, 27, 27);
        }
        #navigator a{
            color: snow;
            text-decoration: none;
            margin: 5px 5px 5px 5px;
            padding: 3px 3px 0 3px;

        }
       
        /* input[type=file]::file-selector-button{
            background-color: transparent;
            margin: 0;
            border: 0 transparent;
            cursor: pointer;
            color: transparent;
        }
        input[type=file]{
            background-color: rgba(6, 6, 252, 0.582);
            cursor: pointer;

            margin: 0;
            border: 0 transparent;
            cursor: pointer;
            color: transparent;
        } */
        
        #announcement-form{
            display: none
        }
        #each-anouncement{
            padding: 10px 0 0 43px;
            margin: 10px 0 0 43px;
            width: 60%;
            height: 185px;
            background-color: rgba(46, 139, 127, 0.719);
            color: aliceblue;
            align-items: center;

        }
        #each-anouncement #buttons a{
            text-decoration: none;
            color: azure;
            background-color: rgb(173, 217, 223);
            margin: 6px;
            padding: 10px;
        }
        #announcement-list{
            margin-top: 3%;
        }
        #addNew{
            padding: 12px;
            margin: 120px 12px;
            text-decoration: none;
            color: snow;
            background-color: rgba(29, 29, 29, 0.705);
        }
        #announcement-form, form{
            padding: 5% 12%;
            /* background-color: rgba(207, 231, 220, 0.788); */
        }
        #backToList{
            padding: 12px;
            margin: 15px 12px;
            text-decoration: none;
            color: snow;
            background-color: rgba(29, 29, 29, 0.705);
        }

        #submit{
            width: 70px;
            height: 40px;
            background-color: rgba(184, 184, 206, 0.842);
        }

    </style>

</head>
<body>
<div id="project-info">
    <div id="numbers">
        <div id="navigator">
            <a href="/server/users"> Users</a>
            <a href="#"> Chat traits</a>
            <a href="#"> Complaints</a>
        </div>
        <div id="announcement-list">
            <a href="#" onclick="newAnnouncement()" id="addNew">Add announcement</a>
            <% announcement.forEach(announce => { %>
                <div id="each-anouncement">
                    <p><%= announce._id %></p>
                    <p><%= announce.category %></p>
                    <p><%= announce.description %></p>
                    <div id="buttons">
                        <a href="/server/information/<%= announce._id %>" onclick="alert('loading information')">Info</a>
                    </div>
                </div>
            <% }); %>
        </div>
        <div id="announcement-form">
            <a href="#" onclick="allAnnouncement()" id="backToList">Announcements</a>
            <form method="POST" enctype="multipart/form-data" action="/server/new-announcement" onsubmit="alert('item saved')" >
                <div style="display: flex;">
                    <div style="margin: 0 21px 40px 0;">
                        <p>Category</p>
                        <input style="width: 350px; height: 90xp;" class="texts" type="text" name="category" placeholder="announcement heading"></div>
                    <div>
                        <p>Enter media files</p>
                        <input class="input-image" name="file" type="file" placeholder="images" title="this could be an image, a video or a GIF, any type of media">
                    </div>
                </div>
               <textarea class="texts" cols="90" name="description" placeholder="Add description about the announcement" rows="13"></textarea><br />
                <input id="submit" type="submit">
            </form>
        </div>
    
    </div>
    
</div>
</body>
<script>
    function newAnnouncement(){
        document.getElementById("announcement-list").style.display = "none";
        document.getElementById("announcement-form").style.display = "inline";
    }
    function allAnnouncement(){
        document.getElementById("announcement-list").style.display = "inline";
        document.getElementById("announcement-form").style.display = "none";
    }
</script>
</html>
